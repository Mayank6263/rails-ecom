<h1>New Product</h1>

<%= form_with model: @product do |form| %>
  <div >
    <%= form.label :name %>
    <%= form.text_field :name%>
  </div>

  <div >
    <%= form.label :price %>
    <%= form.number_field :price %>
  </div>

  <div>
    <%= form.submit 'Create Product'%>
  </div>
<% end %>

<%= link_to 'Back', products_path %>
